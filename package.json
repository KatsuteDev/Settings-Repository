{
    "name": "settings-repository",
    "displayName": "Settings Repository",
    "description": "Sync VSCode settings to a repository",
    "icon": "assets/icon-sm.png",
    "galleryBanner": {
        "color": "#0098FF",
        "theme": "dark"
    },
    "publisher": "Katsute",
    "version": "1.0.0",
    "private": true,
    "engines": {
        "vscode": "^1.69.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [],
    "sponsor": {
        "url": "https://patreon.com/Katsute"
    },
    "activationEvents": [
        "onStartupFinished",
        "onCommand:settings-repository.config",
        "onCommand:settings-repository.repository",
        "onCommand:settings-repository.authenticate",
        "onCommand:settings-repository.overwriteLocal",
        "onCommand:settings-repository.overwriteRemote",
        "onCommand:settings-repository.importSettings",
        "onCommand:settings-repository.exportSettings"
    ],
    "contributes": {
        "commands": [
            {
                "command": "settings-repository.config",
                "title": "Settings Repository",
                "category": "Settings Repository"
            },
            {
                "command": "settings-repository.repository",
                "title": "Choose Settings Repository",
                "category": "Settings Repository"
            },
            {
                "command": "settings-repository.authenticate",
                "title": "Update auth credentials",
                "category": "Settings Repository"
            },
            {
                "command": "settings-repository.overwriteLocal",
                "title": "Overwrite Local",
                "category": "Settings Repository"
            },
            {
                "command": "settings-repository.overwriteRemote",
                "title": "Overwrite Remote",
                "category": "Settings Repository"
            },
            {
                "command": "settings-repository.importSettings",
                "title": "Import Settings",
                "category": "Settings Repository"
            },
            {
                "command": "settings-repository.exportSettings",
                "title": "Export Settings",
                "category": "Settings Repository"
            }
        ],
        "configuration": {
            "title": "Settings Repository",
            "order": 0,
            "properties": {
                "settings-repository.repository": {
                    "markdownDescription": "The git repository to sync settings to",
                    "type": "string",
                    "order": 0,
                    "default": ""
                },
                "settings-repository.branch": {
                    "markdownDescription": "The branch to sync settings to",
                    "type": "string",
                    "order": 1,
                    "default": "main"
                },
                "settings-repository.autoSync": {
                    "markdownDescription": "Automatically sync settings when VSCode is closed",
                    "type": "boolean",
                    "order": 2,
                    "default": true
                },
                "settings-repository.includeHostnameInCommitMessage": {
                    "markdownDescription": "Include hostname in the commit message",
                    "type": "boolean",
                    "order": 3,
                    "default": true
                }
            }
        }
    },
    "main": "dist/extension.js",
    "scripts": {
        "// -- dev -- //": "",
        "clean": "rimraf dist & rimraf dist & rimraf background-*.vsix",
        "prune": "npm prune && npm i --package-lock --ignore-scripts",
        "update": "npm update -D && npm i --package-lock --ignore-scripts && npm run prune",
        "// -- build -- //": "",
        "vscode:prepublish": "npm run prepare",
        "compile": "tsc --outDir dist",
        "build": "npm run compile",
        "prepare": "npm run clean && npm run build",
        "// -- test -- //": "",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "test": "npm run pretest",
        "// -- deploy -- //": "",
        "package": "vsce package"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/KatsuteDev/Settings-Repository.git"
    },
    "author": "Katsute",
    "license": "GPL-2.0-only",
    "bugs": {
        "url": "https://github.com/KatsuteDev/Settings-Repository/issues"
    },
    "homepage": "https://github.com/KatsuteDev/Settings-Repository#readme",
    "dependencies": {
        "adm-zip": "0.5.9",
        "simple-git": "3.10.0"
    },
    "devDependencies": {
        "@types/adm-zip": "0.5.0",
        "@types/node": "18.0.4",
        "@types/vscode": "1.69.0",
        "rimraf": "3.0.2",
        "typescript": "4.7.4",
        "vsce": "2.9.2"
    }
}
